<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/daisyui@4.12.10/dist/full.min.css" rel="stylesheet" type="text/css" />
    <script src="https://cdn.tailwindcss.com"></script>
    <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>
    <style>
        :root {
            --primary-color: #00486d;
            --secondary-color: #e63934;
        }
        
        .btn-primary {
            background-color: var(--primary-color) !important;
            border-color: var(--primary-color) !important;
        }
        
        .btn-primary:hover {
            background-color: #003a5a !important;
            border-color: #003a5a !important;
        }
        
        .btn-secondary {
            background-color: var(--secondary-color) !important;
            border-color: var(--secondary-color) !important;
        }
        
        .btn-secondary:hover {
            background-color: #d12e29 !important;
            border-color: #d12e29 !important;
        }
        
        .text-primary {
            color: var(--primary-color) !important;
        }
        
        .text-secondary {
            color: var(--secondary-color) !important;
        }
    </style>
</head>
<body class="bg-white">
    <div class="navbar bg-base-100 shadow-lg">
        <div class="flex-1">
            <a class="btn btn-ghost normal-case text-xl text-primary">Capitec Invoice Tracker</a>
        </div>
        <div class="flex-none">
            <ul class="menu menu-horizontal px-1">
                <li><a href="/" class="btn btn-ghost">Home</a></li>
                <li><a href="/invoices" class="btn btn-ghost">Invoices</a></li>
                <li>
                    <form action="/logout" method="POST" class="inline">
                        <button type="submit" class="btn btn-ghost">Logout</button>
                    </form>
                </li>
            </ul>
        </div>
    </div>

    <div class="container mx-auto px-4 py-8">
        <div class="mb-6 flex justify-between items-center">
            <div>
                <h1 class="text-3xl font-bold text-primary mb-2"><%= title %></h1>
                <p class="text-gray-600">View all invoices with customer details and totals</p>
            </div>
            <a href="/invoices/new" class="btn btn-primary">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                </svg>
                New Invoice
            </a>
        </div>

        <div class="card bg-base-100 shadow-xl">
            <div class="card-body" x-data="{ 
                activeFilter: 'all',
                invoices: <%= JSON.stringify(invoices) %>,
                get filteredInvoices() {
                    if (this.activeFilter === 'all') return this.invoices;
                    return this.invoices.filter(invoice => invoice.status.toLowerCase() === this.activeFilter);
                },
                get counts() {
                    return {
                        all: this.invoices.length,
                        overdue: this.invoices.filter(inv => inv.status === 'OVERDUE').length,
                        pending: this.invoices.filter(inv => inv.status === 'PENDING').length,
                        paid: this.invoices.filter(inv => inv.status === 'PAID').length
                    };
                }
            }">
                <% if (invoices && invoices.length > 0) { %>
                    <!-- Filter Buttons -->
                    <div class="mb-4 flex flex-wrap gap-2">
                        <button 
                            class="btn btn-sm"
                            :class="activeFilter === 'all' ? 'btn-primary' : 'btn-outline'"
                            @click="activeFilter = 'all'"
                        >
                            All (<span x-text="counts.all"></span>)
                        </button>
                        <button 
                            class="btn btn-sm"
                            :class="activeFilter === 'overdue' ? 'btn-primary' : 'btn-outline'"
                            @click="activeFilter = 'overdue'"
                        >
                            Overdue (<span x-text="counts.overdue"></span>)
                        </button>
                        <button 
                            class="btn btn-sm"
                            :class="activeFilter === 'pending' ? 'btn-primary' : 'btn-outline'"
                            @click="activeFilter = 'pending'"
                        >
                            Pending (<span x-text="counts.pending"></span>)
                        </button>
                        <button 
                            class="btn btn-sm"
                            :class="activeFilter === 'paid' ? 'btn-primary' : 'btn-outline'"
                            @click="activeFilter = 'paid'"
                        >
                            Paid (<span x-text="counts.paid"></span>)
                        </button>
                    </div>
                    
                    <div class="overflow-x-auto">
                        <table class="table w-full">
                            <thead>
                                <tr>
                                    <th>Invoice ID</th>
                                    <th>Customer Name</th>
                                    <th>Description</th>
                                    <th>Created Date</th>
                                    <th>Due Date</th>
                                    <th>Status</th>
                                    <th class="text-right">Total Amount</th>
                                </tr>
                            </thead>
                            <tbody>
                                <template x-for="invoice in filteredInvoices" :key="invoice.id">
                                    <tr>
                                        <td class="font-mono" x-text="'#' + invoice.id"></td>
                                        <td class="font-semibold" x-text="invoice.customer_name"></td>
                                        <td>
                                            <a :href="'/invoice/' + invoice.id" class="link link-primary hover:link-secondary" x-text="invoice.description"></a>
                                        </td>
                                        <td x-text="new Date(invoice.created_date).toLocaleDateString()"></td>
                                        <td x-text="new Date(invoice.due_date).toLocaleDateString()"></td>
                                        <td>
                                            <div class="badge" 
                                                 :class="{
                                                     'badge-success': invoice.status === 'PAID',
                                                     'badge-warning': invoice.status === 'PENDING', 
                                                     'badge-error': invoice.status === 'OVERDUE'
                                                 }"
                                                 x-text="invoice.status === 'PAID' ? 'Paid' : invoice.status === 'PENDING' ? 'Pending' : 'Overdue'">
                                            </div>
                                        </td>
                                        <td class="text-right font-semibold" x-text="'R' + parseFloat(invoice.total).toFixed(2)"></td>
                                    </tr>
                                </template>
                            </tbody>
                        </table>
                    </div>
                <% } else { %>
                    <div class="text-center py-8">
                        <div class="text-gray-500 mb-4">
                            <svg class="mx-auto h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                            </svg>
                        </div>
                        <p class="text-gray-500">No invoices found</p>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</body>
</html>